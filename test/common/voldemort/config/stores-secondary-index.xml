<?xml version="1.0"?>
<stores>
  <store>
    <name>test-secondary-index</name>
    <persistence>bdb_si</persistence>
    <routing>client</routing>
    <replication-factor>3</replication-factor>
    <required-reads>2</required-reads>
    <required-writes>2</required-writes>
    <key-serializer>
      <type>string</type>
    </key-serializer>
    <value-serializer>
      <type>json</type>
      <schema-info>{'data':'string', 'status':'int8', 'lastmod':'date', 'company':'string', 'feedless':'boolean'}</schema-info>
    </value-serializer>
    <secondary-indexes>
	    <secondary-index>
		  <name>status</name>
		  <extractor-type>map</extractor-type>
		  <extractor-info>status</extractor-info>
		  <field-type>int8</field-type>
		</secondary-index>
	    <secondary-index>
		  <name>lastmod</name>
		  <extractor-type>map</extractor-type>
		  <extractor-info>lastmod</extractor-info>
		  <field-type>date</field-type>
		</secondary-index>
	    <secondary-index>
		  <name>company</name>
		  <extractor-type>map</extractor-type>
		  <extractor-info>company</extractor-info>
		  <field-type>string</field-type>
		</secondary-index>
	    <secondary-index>
		  <name>feedless</name>
		  <extractor-type>map</extractor-type>
		  <extractor-info>feedless</extractor-info>
		  <field-type>boolean</field-type>
		</secondary-index>
	</secondary-indexes>	
  </store>
  <store>
    <name>test-secondary-index-with-compression</name>
    <persistence>bdb_si</persistence>
    <routing>client</routing>
    <replication-factor>3</replication-factor>
    <required-reads>2</required-reads>
    <required-writes>2</required-writes>
    <key-serializer>
      <type>string</type>
    </key-serializer>
    <value-serializer>
      <type>json</type>
      <schema-info>{'data':'string', 'status':'int8', 'lastmod':'date', 'company':'string', 'feedless':'boolean'}</schema-info>
      <compression><type>gzip</type></compression>
    </value-serializer>
    <secondary-indexes>
	    <secondary-index>
		  <name>status</name>
		  <extractor-type>map</extractor-type>
		  <extractor-info>status</extractor-info>
		  <field-type>int8</field-type>
		</secondary-index>
	    <secondary-index>
		  <name>lastmod</name>
		  <extractor-type>map</extractor-type>
		  <extractor-info>lastmod</extractor-info>
		  <field-type>date</field-type>
		</secondary-index>
	    <secondary-index>
		  <name>company</name>
		  <extractor-type>map</extractor-type>
		  <extractor-info>company</extractor-info>
		  <field-type>string</field-type>
		</secondary-index>
	    <secondary-index>
		  <name>feedless</name>
		  <extractor-type>map</extractor-type>
		  <extractor-info>feedless</extractor-info>
		  <field-type>boolean</field-type>
		</secondary-index>
	</secondary-indexes>	
  </store>
</stores>